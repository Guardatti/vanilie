{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/app.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/products(.*)",
            "dest": "backend/app.ts"
        },
        {
            "src": "/auth(.*)",
            "dest": "backend/app.ts"
        },
        {
            "src": "/orders(.*)",
            "dest": "backend/app.ts"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}