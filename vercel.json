{
    "version": 2,
    "builds": [
        {
            "src": "vanille/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/app.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {

            "src": "/(.*)",

            "dest": "backend/app.ts"
            
        },
        {

            "src": "/(.*)",
            "dest": "vanille/dist/$1"

        }
    ]
}