{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "builds": [
        {
            "src": "backend/app.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(products|auth|orders)(.*)",
            "dest": "backend/app.ts"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}